{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": { 
    "jsx": "react",
    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                
  }
}
